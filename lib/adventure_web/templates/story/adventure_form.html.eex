<div class="adventure-form">
  <%= form_for @conn,
    story_path(@conn, :show),
    [method: :post, as: :story, class: "form-inline"],
    fn f -> %>
  <label for="input"></label>
  <div class="input-group">
    <%= text_input f, :text_input, placeholder: "What adventure do you want?", default: "", class: "form-control" %>
    <span class="input-group-btn"><%= submit "Search", class: "btn btn-primary"%></span>
  </div>
  <% end %>
</div>
